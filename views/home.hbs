<div class="absolute top-0 right-0 m-4">
    <a href="/logout">
        <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Logout</button>
    </a>
</div>

<body class="flex items-center justify-center h-screen bg-gray-100">

    <div class="bg-white p-8 rounded shadow-lg text-center">
        <button class="bg-green-700 hover:bg-green-900 text-white font-bold py-2 px-8 rounded mx-20" onclick="upload()">
            Start ECG
        </button>
        <div class="mt-4">
            <p class="mb-2"><strong>Name:</strong> {{name}}</p>
            <p class="mb-2"><strong>Age:</strong> {{age}}</p>
            <p class="mb-2"><strong>Sex:</strong> {{sex}}</p>
            <p class="mb-2"><strong>Weight:</strong> {{weight}} kg</p>
            <p class="mb-2"><strong>Height:</strong> {{height}} cm</p>
        </div>
        <img src="{{image}}" alt="User Image" class="mt-4 rounded-full mx-auto" width="100px" />
        <br>
        <a href="/editDetails">
            <button class="bg-white bg-gray-400 hover:bg-gray-600 text-gray-800 font-bold py-2 px-4 rounded">
                Edit Details
            </button>
        </a>
        <br>
        <div class="m-3">
            <a href="comment">
                <button class="bg-white bg-gray-200 hover:bg-gray-500 text-gray-900 font-bold py-2 px-4 rounded">
                    Show Comments
                </button>
            </a>
        </div>
        <br>
        <div class="mb-4 mt-4" id="show" style="display: none;">
            <form action="/uploadECG" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="image" class="block text-gray-700 text-sm font-bold mb-2">Upload ECG:</label>
                    <input type="file" id="image" name="ecgImage" accept="image/*" class="w-full" multiple required>
                </div>
                <button type="submit"
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-8">Upload
                    Report</button>
            </form>
        </div>
    </div>

</body>

<script>
    const upload = () => {
        document.getElementById('show').style.display = 'block'
        axios.get('http://localhost:8080/run')
            .then(() => {
                document.getElementById('show').style.display = 'block'
            })
    }
</script>